<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextHeaderStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextMainHeaderStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Card" parent="CardView">
        <item name="cardElevation">5dp</item>
        <item name="divider">@android:color/transparent</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">5dp</item>
    </style>

</resources>
